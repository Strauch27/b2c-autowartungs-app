# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/b2c_autowartung?schema=public"

# Server Configuration
PORT=5001
NODE_ENV=development

# Demo Mode Configuration
# Set to 'true' to use demo payment service instead of Stripe
# This allows testing without Stripe API keys
# Demo endpoints will be available at /api/demo/*
DEMO_MODE=false

# Stripe Configuration
# Get your API keys from: https://dashboard.stripe.com/test/apikeys
# Test Mode Keys (for development):
STRIPE_SECRET_KEY=sk_test_51... # Your Stripe Secret Key
STRIPE_PUBLISHABLE_KEY=pk_test_51... # Your Stripe Publishable Key

# Webhook Secret (get from: https://dashboard.stripe.com/test/webhooks)
# After creating a webhook endpoint, copy the signing secret
STRIPE_WEBHOOK_SECRET=whsec_...

# Production Mode Keys (uncomment for production):
# STRIPE_SECRET_KEY=sk_live_...
# STRIPE_PUBLISHABLE_KEY=pk_live_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# Magic Link Configuration
MAGIC_LINK_SECRET=your-magic-link-secret-change-in-production-min-32-chars

# Frontend URL (for Magic Links)
FRONTEND_URL=http://localhost:3000

# Email Configuration
# Provider options: resend, sendgrid, smtp, console (console = development mode)
EMAIL_PROVIDER=console
EMAIL_FROM=B2C Autowartung <noreply@b2c-autowartung.de>

# Option 1: Resend (Recommended - Modern, Developer-friendly)
# Sign up at https://resend.com and get your API key
RESEND_API_KEY=re_your_resend_api_key

# Option 2: SendGrid
# Get your API key from https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your-sendgrid-api-key

# Option 3: SMTP (for local development with Mailtrap, MailHog, etc.)
# Mailtrap: https://mailtrap.io (free email testing service)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-mailtrap-username
SMTP_PASS=your-mailtrap-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# AWS S3 Configuration (File Upload Service)
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_S3_BUCKET=your-bucket-name

# Azure Blob Storage (Optional for MVP - Deprecated, use S3 instead)
AZURE_STORAGE_CONNECTION_STRING=...
AZURE_STORAGE_CONTAINER_NAME=photos

# Firebase Cloud Messaging (Push Notifications)
# Get your service account from Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...","client_id":"..."}

# Odoo Integration (Post-MVP)
ODOO_URL=https://your-odoo-instance.com
ODOO_DB=your-database
ODOO_USERNAME=admin
ODOO_PASSWORD=password
