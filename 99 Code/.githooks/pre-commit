#!/bin/bash

# Pre-commit hook to ensure quality before committing
# Install: ln -s ../../.githooks/pre-commit .git/hooks/pre-commit

set -e

echo "üîç Running pre-commit quality checks..."
echo ""

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

ERRORS=0

# 1. Check TypeScript compilation (Frontend)
echo "üìò Checking TypeScript (Frontend)..."
cd "99 Code/frontend"
if npm run type-check 2>&1 | grep -q "error"; then
    echo -e "${RED}‚úó TypeScript errors found in frontend${NC}"
    ERRORS=$((ERRORS + 1))
else
    echo -e "${GREEN}‚úì Frontend TypeScript OK${NC}"
fi
cd ../..

# 2. Check TypeScript compilation (Backend)
echo "üìó Checking TypeScript (Backend)..."
cd "99 Code/backend"
if npm run type-check 2>&1 | grep -q "error"; then
    echo -e "${RED}‚úó TypeScript errors found in backend${NC}"
    ERRORS=$((ERRORS + 1))
else
    echo -e "${GREEN}‚úì Backend TypeScript OK${NC}"
fi
cd ../..

# 3. Run linter (Frontend)
echo "üîé Running ESLint (Frontend)..."
cd "99 Code/frontend"
if ! npm run lint; then
    echo -e "${RED}‚úó Linting errors found in frontend${NC}"
    ERRORS=$((ERRORS + 1))
else
    echo -e "${GREEN}‚úì Frontend linting OK${NC}"
fi
cd ../..

# 4. Check for missing UI components
echo "üé® Checking UI components..."
REQUIRED_COMPONENTS=(
    "dialog.tsx"
    "textarea.tsx"
    "table.tsx"
    "button.tsx"
    "input.tsx"
    "label.tsx"
    "card.tsx"
    "badge.tsx"
)

cd "99 Code/frontend/components/ui"
for component in "${REQUIRED_COMPONENTS[@]}"; do
    if [ ! -f "$component" ]; then
        echo -e "${RED}‚úó Missing component: $component${NC}"
        ERRORS=$((ERRORS + 1))
    fi
done
echo -e "${GREEN}‚úì All required UI components exist${NC}"
cd ../../../..

# 5. Check Prisma schema is valid
echo "üóÑÔ∏è  Checking Prisma schema..."
cd "99 Code/backend"
if ! npx prisma validate; then
    echo -e "${RED}‚úó Prisma schema validation failed${NC}"
    ERRORS=$((ERRORS + 1))
else
    echo -e "${GREEN}‚úì Prisma schema OK${NC}"
fi
cd ../..

# 6. Check for common mistakes
echo "üîç Checking for common issues..."

# Check for console.log in production code
if git diff --cached --name-only | grep -E '\.(ts|tsx)$' | xargs grep -n "console\.log" 2>/dev/null; then
    echo -e "${YELLOW}‚ö†Ô∏è  Warning: console.log found in staged files${NC}"
fi

# Check for 'any' type usage
if git diff --cached --name-only | grep -E '\.(ts|tsx)$' | xargs grep -n ": any" 2>/dev/null; then
    echo -e "${YELLOW}‚ö†Ô∏è  Warning: 'any' type found in staged files${NC}"
fi

echo ""
echo "================================"
if [ $ERRORS -eq 0 ]; then
    echo -e "${GREEN}‚úì All quality checks passed!${NC}"
    echo "Proceeding with commit..."
    exit 0
else
    echo -e "${RED}‚úó $ERRORS quality check(s) failed!${NC}"
    echo "Please fix the issues before committing."
    exit 1
fi
